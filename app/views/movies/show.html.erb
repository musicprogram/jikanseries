<div class="container-fluid fondo_i">
  
<div class="">

  
<div class="row">
  <div class="col-md-5">
    <%= image_tag @movie.avatar.url,  class:'imagen_1 img-responsive' %>
  
  </div>
  <div class="col-md-7">
   <h1 class="page nn">
     <%= @movie.name %>
    
      <small class="iz">
        <%= link_to "Ver pelicula", "#{@movie.link}", :target => "_blank" %>
       
      </small>
   </h1>
   <% if estrella_pelicula != 0 %>
     <div class="calificacion">
       <%= image_tag("star1.png", class:'estrella_1')  %>
      <h1 class="puntua">
         <%= estrella_pelicula.to_s %>
      </h1>  
     </div>
    <% end %> 
   <table  class="table table-hover">
     <tr>
       <td> <strong>Año:</strong>
      <%= @movie.year %></td>
       <td><strong>Director:</strong>
      <%= @movie.director %></td>
       <td><strong>Duracion:</strong>
      <%= @movie.duration %></td>
       <td><strong>País:</strong>
      <%= @movie.country %></td>
     </tr>
   </table>
   <div class="row">
       <div class="col-md-12 ">
           <div class="descripcion">
              <h5 class="letrashow">
                <b>Categoría:</b>  <p><%= @movie.category.name rescue nil %></p>
                <b>Actores:</b>  <p>
                    <%= @movie.actors %>
                    </p> 
                 <b>Descripciòn</b> <p>
                     <%= @movie.description %>
                 </p>
              </h5>
            </div>
        

           
       </div>
     
   </div>

  </div>
</div>
    <br>
  <div class="row">
    <div class="col-md-5">
     <div class="embed-container">
       <iframe class="sombra_1" src="<%= @movie.video %>" frameborder="0" allowfullscreen></iframe>
     </div>
      
      </div>
    <div class="col-md-7">
    
     <div class="descripcion scroll">
  
    <%= render 'list_comments' %>
  </div>
  <br>
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
